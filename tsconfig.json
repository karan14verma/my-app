{
	"compileOnSave": true,
	"compilerOptions": {
		"baseUrl": ".",
		"module": "es2015",
		"moduleResolution": "node",
		"lib": [ "es2017", "dom" ],
		"target": "es5",
		"jsx": "react",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"sourceMap": true,
		"skipDefaultLibCheck": true,
		"strict": true,
		"types": [ "node" ],
		"downlevelIteration": true
	},
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"src/setupTests.ts"
	  ]
}
